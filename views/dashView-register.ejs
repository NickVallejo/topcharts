<div class="logreg-wrap">

  <div class="logreg-box">
    <h1>Register</h1>

    <% if(errs) {%>
    <div class="errs">
      <h5>Invalid Credentials:</h5>
      <ul>
        <% for(i = 0; i < errs.length; i++) {%>
        <li><%- errs[i].msg %></li>
        <% } %>
      </ul>
    </div>
  <% } %>

  <% if(inputs) { %>
    
    <form class="reg-form" action="/register" method="post">
      <input type="text" name="username" placeholder="Username..." value= <%= inputs[0] %> />
      <input type="text" name="email"  placeholder="Email..." value= <%= inputs[1] %> />
      <div class="eye">
        <input type="password"  name="password"  placeholder="Password..." value= <%= inputs[2] %> />
        <i class="far fa-eye"></i>
      </div>
      <div class="eye">
        <input type="password" name="password2"  placeholder="Confirm Password..." />
        <i class="far fa-eye"></i>
      </div>
      <button type="submit" name="button">Register</button>
    </form>
  <% } else {%>

    <form class="reg-form" action="/register" method="post">
      <input type="text" name="username" value="" placeholder="Username..."/>
      <input type="text" name="email" value="" placeholder="Email..."/>
      <div class="eye">
        <input type="password" name="password"  placeholder="Password..." />
        <i class="far fa-eye"></i>
      </div>
      <div class="eye">
        <input type="password" name="password2"  placeholder="Confirm Password..." />
        <i class="far fa-eye"></i>
      </div>
      <button type="submit"  name="button">Register</button>

    </form>

  <% } %>
    <a href="/login">Login</a>
  </div>

</div>

<script type="text/javascript" src="http://localhost:8888/topsters3 - copy/js/logreg/logreg.js"></script>
